---
import BearLink from "../components/BearLink.astro";
---

<div class="banner">
  <img
    class="cover"
    src="/img/banners/default.svg"
    alt="Space with stars and rockets"
  />
  <div class="banner-content">
    <img class="logo" src="/img/logo-dark.svg" alt="JSHeroes" />
    <div><strong>Open-Source</strong> Community Event</div>

    <div class="date">May <span class="highlight">18-19th</span> 2023</div>

    <p>in Cluj-Napoca, Romania</p>

    <span class="bear-anchor">
      <BearLink animation="scale" />
    </span>
  </div>
</div>
<style>
  .banner {
    background-color: var(--color-primary);
    height: 550px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .cover {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  @media screen and (max-width: 756px) {
    .banner {
      height: 400px;
    }
  }

  .banner-content {
    color: white;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
    font-family: var(--font-family-display);
    position: absolute;
  }

  .banner-content p {
    margin: 0;
  }

  .logo {
    aspect-ratio: 300/53;
    width: clamp(10rem, 30vw, 18rem);
  }

  .date {
    font-size: var(--font-size-lg);
    font-weight: 500;
  }

  .highlight {
    font-size: 1.2em;
  }

  @keyframes float {
    from {
      transform: translateX(0, 0) scale(1) rotate(0);
    }

    to {
      transform: translate(120px, -30px) scale(0.8) rotate(45deg);
    }
  }

  .bear-anchor {
    position: absolute;
    z-index: 1;
    bottom: -240px;
    right: -200px;
    animation: 30s infinite alternate float;
    animation-timing-function: linear;
  }

  @media screen and (max-width: 1000px) {
    .bear-anchor {
      animation: none;
    }
  }

  @media screen and (max-width: 756px) {
    .bear-anchor {
      bottom: -140px;
      right: -100px;
    }
  }

  @media screen and (max-width: 432px) {
    .bear-anchor {
      bottom: -140px;
      right: 0;
    }
  }
</style>
